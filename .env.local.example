# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
# New Supabase Secret Key (replaces legacy service_role key)
SUPABASE_SECRET_KEY=your_secret_key

# Groq
GROQ_API_KEY=your_groq_api_key

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# RSSHub Configuration (for YouTube + Apple Podcasts RSS feeds)
# Self-hosted recommended (see docs/rsshub-setup.md)
RSSHUB_BASE_URL=http://localhost:1200

# Optional: YouTube API key for better RSSHub rate limits
YOUTUBE_API_KEY=your_youtube_api_key_here

# Cache settings (optional)
CACHE_TTL_HOURS=6

# Spotify API (DEPRECATED - now using Apple Podcasts via iTunes API)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
